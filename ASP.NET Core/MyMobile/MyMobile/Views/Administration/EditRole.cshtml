@using MyMobile.DAL.Models.ViewModels.Administration
@model EditRoleViewModel

<h1>Edit Role</h1>

<form method="post" asp-action="EditRole" asp-controller="Administration">
    <div>
        <label asp-for="RoleId"></label>
        <input asp-for="RoleId" readonly />
    </div>
    <div>
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" value="@Model.RoleName" />
    </div>
    <div>
        <button type="submit" asp-action="EditRoleStore" asp-controller="Administration" asp-route-id="@Model.RoleId">Update</button>
        <a asp-action="ListRoles" asp-controller="Administration">Cancel</a>
    </div>
</form>

<div>
    <h2>Users in this role</h2>
    <div>
        @if(Model.Users.Count != 0)
        {
            foreach(var user in Model.Users)
            {
                <div>@user</div>
            }
        }
        else
        {
            <p>None at the moment</p>
        }
    </div>
    <div>
        <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.RoleId">Add or remove users</a>
    </div>
</div>

